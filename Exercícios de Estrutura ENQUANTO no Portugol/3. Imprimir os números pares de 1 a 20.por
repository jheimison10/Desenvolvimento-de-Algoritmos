programa
{
  funcao inicio()
  {
    inteiro numero = 1
    enquanto (numero <= 20) { // Enquanto o número for menor ou igual a 20
      se (numero % 2 == 0) { // Verifica se o número é par
        escreva(numero + ",")
      }
      numero = numero + 1 // Incrementa o número
    }
  }
}
